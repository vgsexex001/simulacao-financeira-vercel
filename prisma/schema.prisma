generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String    @id @default(cuid())
  name           String
  email          String    @unique
  hashedPassword String
  avatarUrl      String?
  onboarded      Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  settings          UserSettings?
  incomeSources     IncomeSource[]
  incomes           Income[]
  expenseCategories ExpenseCategory[]
  expenses          Expense[]
  fixedTemplates    FixedExpenseTemplate[]
  budgets           Budget[]
  goals             Goal[]
  goalContributions GoalContribution[]
  monthSnapshots    MonthSnapshot[]
}

model UserSettings {
  id                        String  @id @default(cuid())
  userId                    String  @unique
  currency                  String  @default("BRL")
  locale                    String  @default("pt-BR")
  monthStartDay             Int     @default(1)
  initialBalance            Decimal @default(0) @db.Decimal(12, 2)
  estimatedMonthlyIncome    Decimal @default(0) @db.Decimal(12, 2)
  emergencyFundGoal         Decimal @default(0) @db.Decimal(12, 2)
  investedPatrimonyGoal     Decimal @default(0) @db.Decimal(12, 2)
  totalPatrimonyGoal        Decimal @default(0) @db.Decimal(12, 2)
  passiveIncomeCurrent      Decimal @default(0) @db.Decimal(12, 2)
  passiveIncomeGoal         Decimal @default(0) @db.Decimal(12, 2)
  jarRulesJson              Json    @default("{\"necessities\":55,\"education\":10,\"savings\":10,\"play\":10,\"investment\":10,\"giving\":5}")
  notificationDailyReminder Boolean @default(true)
  notificationWeeklyReport  Boolean @default(true)
  notificationBudgetAlerts  Boolean @default(true)
  dayOfMonthClose           Int     @default(30)
  darkMode                  String  @default("auto") // auto, light, dark

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model IncomeSource {
  id             String   @id @default(cuid())
  userId         String
  name           String
  type           String   @default("other") // salary, freelance, sales, consulting, investments, rent, commissions, bonus, extra, other
  icon           String?
  color          String?
  isActive       Boolean  @default(true)
  frequency      String   @default("monthly_fixed") // monthly_fixed, monthly_variable, biweekly, weekly, per_project, sporadic
  expectedAmount Decimal? @db.Decimal(12, 2)
  sortOrder      Int      @default(0)
  createdAt      DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  incomes Income[]

  @@index([userId])
}

model Income {
  id            String   @id @default(cuid())
  userId        String
  sourceId      String
  amount        Decimal  @db.Decimal(12, 2)
  description   String
  date          DateTime
  isRecurring   Boolean  @default(false)
  isConfirmed   Boolean  @default(true)
  tags          String[] @default([])
  notes         String?
  attachmentUrl String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  source IncomeSource @relation(fields: [sourceId], references: [id])

  @@index([userId, date])
}

model ExpenseCategory {
  id                String   @id @default(cuid())
  userId            String
  name              String
  type              String   @default("other") // housing, food, transport, health, education, entertainment, clothing, technology, subscriptions, insurance, taxes, investments, donations, debt, other
  icon              String?
  color             String?
  budgetLimit       Decimal? @db.Decimal(12, 2)
  alertThresholdPct Decimal  @default(80) @db.Decimal(5, 2)
  isFixed           Boolean  @default(false)
  isDefault         Boolean  @default(false)
  isActive          Boolean  @default(true)
  sortOrder         Int      @default(0)
  createdAt         DateTime @default(now())

  user             User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses         Expense[]
  fixedTemplates   FixedExpenseTemplate[]
  budgets          Budget[]

  @@index([userId])
}

model Expense {
  id                 String   @id @default(cuid())
  userId             String
  categoryId         String
  amount             Decimal  @db.Decimal(12, 2)
  description        String
  date               DateTime
  jarType            String?
  isFixed            Boolean  @default(false)
  isPaid             Boolean  @default(true)
  isRecurring        Boolean  @default(false)
  recurrenceRule     Json?
  paymentMethod      String   @default("pix") // pix, debit, credit, cash, transfer, boleto
  installmentCurrent Int?
  installmentTotal   Int?
  tags               String[] @default([])
  notes              String?
  attachmentUrl      String?
  location           String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  category ExpenseCategory @relation(fields: [categoryId], references: [id])

  @@index([userId, date])
  @@index([userId, jarType])
}

model FixedExpenseTemplate {
  id           String   @id @default(cuid())
  userId       String
  categoryId   String
  name         String
  amount       Decimal  @db.Decimal(12, 2)
  dueDay       Int
  isActive     Boolean  @default(true)
  autoRegister Boolean  @default(false)
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  category ExpenseCategory @relation(fields: [categoryId], references: [id])

  @@index([userId])
}

model Budget {
  id         String  @id @default(cuid())
  userId     String
  categoryId String
  month      Int
  year       Int
  amount     Decimal @db.Decimal(12, 2)

  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  category ExpenseCategory @relation(fields: [categoryId], references: [id])

  @@unique([userId, categoryId, month, year])
  @@index([userId, month, year])
}

model Goal {
  id            String    @id @default(cuid())
  userId        String
  name          String
  type          String    @default("custom") // emergency_fund, investment, debt_payoff, purchase, custom
  targetAmount  Decimal   @db.Decimal(12, 2)
  currentAmount Decimal   @default(0) @db.Decimal(12, 2)
  deadline      DateTime?
  icon          String?
  color         String?
  isCompleted   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  contributions GoalContribution[]

  @@index([userId])
}

model GoalContribution {
  id        String   @id @default(cuid())
  userId    String
  goalId    String
  amount    Decimal  @db.Decimal(12, 2)
  note      String?
  date      DateTime @default(now())
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([userId, goalId])
}

model MonthSnapshot {
  id                    String    @id @default(cuid())
  userId                String
  month                 Int
  year                  Int
  totalIncome           Decimal   @db.Decimal(12, 2)
  totalFixedExpenses    Decimal   @default(0) @db.Decimal(12, 2)
  totalVariableExpenses Decimal   @default(0) @db.Decimal(12, 2)
  totalExpenses         Decimal   @db.Decimal(12, 2)
  balance               Decimal   @db.Decimal(12, 2)
  accumulatedBalance    Decimal   @default(0) @db.Decimal(12, 2)
  savingsRate           Decimal   @db.Decimal(5, 2)
  jarBalancesJson       Json?
  categoryBreakdown     Json?
  sourceBreakdown       Json?
  closedAt              DateTime?
  createdAt             DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month, year])
  @@index([userId, year])
}
